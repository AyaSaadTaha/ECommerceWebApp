@model IEnumerable<ECommerceWebApp.Controllers.Student>

@{
    ViewData["Title"] = "GetStudentList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    a {
        color: blue;
    }
</style>
<div class="container pt-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Pass Student List</h2>
        </div>
        @* <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New
            </a>
        </div> *@
    </div>
    <br />
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GPA)
                </th>
              
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-secondary">
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td style="color:white;">
                        @Html.DisplayFor(modelItem => item.GPA)
                    </td>
                  
                </tr>
            }
        </tbody>
    </table>

</div>


